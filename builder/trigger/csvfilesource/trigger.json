{
	"name": "csv-file-source",
	"type": "flogo:trigger",
	"ref": "github.com/TIBCOSoftware/GraphBuilder/trigger/csvfilesource",
	"version": "0.0.1",
	"title": "CSVFileSource",
	"description": "CSV File Data Source",
	"homepage": "https://github.com/TIBCOSoftware/GraphBuilder/trigger/csvfilesource",
	"display": {
		"category": "GraphBuilder",
		"visible": true,
		"smallIcon": "csvfilesource.png",
		"description": "This triger read csv file then trugger downstream activity by csv records"
	},
	"output": [
		{
				"name": "OutputFieldMap",
				"type": "array",
				"required": false,
				"display": {
					"name": "Output Field Names",
					"description": "Name and type of fields in CSV file",
					"type": "table",
					"schema": "{\r\n    \"$schema\": \"http:\/\/json-schema.org\/draft-04\/schema#\",\r\n    \"definitions\": {},\r\n    \"id\": \"http:\/\/example.com\/example.json\",\r\n    \"items\": {\r\n        \"id\": \"\/items\",\r\n        \"properties\": {\r\n            \"Column\": {\r\n                \"id\": \"\/items\/properties\/Name\",\r\n                \"type\": \"integer\"\r\n            },\r\n         \"Name\": {\r\n                \"id\": \"\/items\/properties\/Name\",\r\n                \"type\": \"string\"\r\n            },\r\n            \"Type\": {\r\n                \"id\": \"\/items\/properties\/Type\",\r\n                \"type\": {\"enum\":[\"String\", \"Integer\", \"Long\", \"Double\", \"Boolean\", \"Date\"]}\r\n            }\r\n        },\r\n        \"type\": \"object\"\r\n    },\r\n    \"type\": \"array\"\r\n}"
				}
		},
		{
			"name": "Sourcename",
			"type": "string"
		},
		{
			"name": "Queryname",
			"type": "string"
		},
		{
			"name": "Data",
			"type": "complex_object"
		}
	],
	"handler": {
		"settings": [
			{
				"name": "CSVFilename",
				"type": "string",
				"display": {
					"name": "CSV Filename",
					"description": "CSV Filename"
				},
				"required" : true
			},
			{
				"name": "Sourcename",
				"type": "string",
				"display": {
					"name": "Source Name",
					"description": "Source Name"
				},
				"required" : false
			},
			{
				"name": "Queryname",
				"type": "string",
				"display": {
					"name": "Query Name",
					"description": "Query Name"
				},
				"required" : false
			},
			{
				"name": "WithHeader",
				"type": "boolean",
				"display": {
					"name": "With Header",
					"description": "Will skip the first line of this csv file"
				},
				"value": false,
				"required": true
			}
		]
	}
}
