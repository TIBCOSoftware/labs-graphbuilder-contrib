{
	"name": "sql",
	"type": "flogo:trigger",
	"ref": "github.com/TIBCOSoftware/GraphBuilder_SQL/trigger/sql",
	"version": "0.0.1",
	"title": "SQLQuerier",
	"description": "SQL Querier",
	"homepage": "https://github.com/TIBCOSoftware/GraphBuilder_SQL/trigger/sql",
	"display": {
		"category": "GraphBuilder_SQL",
		"visible": true,
		"smallIcon": "sql.png",
		"description": "This trigger make sql query"
	},
	"output": [
		{
			"name": "DataRow",
			"type": "complex_object"
		}
	],
	"handler": {
		"settings": [
			{
        			"name": "sqlConnection",
        			"type": "object",
        			"required": true,
        			"display":{
        				"name": "SQL Connection",
        				"description": "Select SQL Connection",
        				"type": "connection"
        			},
        			"allowed":[]
			},
			{
				"name": "queryString",
				"type": "string",
				"required": false,
				"display": {
					"name": "SQL Query String",
					"description": "SQL Query String",
					"type": "string"
				}
			},
		{
				"name": "outputFieldMap",
				"type": "array",
				"required": false,
				"display": {
					"name": "Output Field Map",
					"description": "Name and type of fields map from DB column",
					"type": "table",
					"schema": "{\r\n    \"$schema\": \"http:\/\/json-schema.org\/draft-04\/schema#\",\r\n    \"definitions\": {},\r\n    \"id\": \"http:\/\/example.com\/example.json\",\r\n    \"items\": {\r\n        \"id\": \"\/items\",\r\n        \"properties\": {\r\n            \"DBColumn\": {\r\n                \"id\": \"\/items\/properties\/Name\",\r\n                \"type\": \"string\"\r\n            },\r\n         \"FieldName\": {\r\n                \"id\": \"\/items\/properties\/Name\",\r\n                \"type\": \"string\"\r\n            },\r\n            \"Type\": {\r\n                \"id\": \"\/items\/properties\/Type\",\r\n                \"type\": {\"enum\":[\"String\", \"Integer\", \"Long\", \"Double\", \"Boolean\", \"Date\"]}\r\n            }\r\n        },\r\n        \"type\": \"object\"\r\n    },\r\n    \"type\": \"array\"\r\n}"
				}
		}
		]
	}
}
